# Traffic AI Environment Variables
# Copy this file to .env and update values as needed

# Application Environment  
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=data/traffic_ai.db

# PostgreSQL Configuration (if using)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=traffic_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your_api_key_here

# Web App Configuration  
WEB_HOST=0.0.0.0
WEB_PORT=5000

# Model Configuration
MODEL_PATH=data/models/
YOLO_MODEL=yolov8n.pt
DEVICE=auto

# Camera Configuration
DEFAULT_CAMERA_URL=0
RTMP_STREAM_URL=rtmp://localhost/live/stream

# Cloud Storage (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# Monitoring & Alerts
ENABLE_ALERTS=true
WEBHOOK_URL=
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
ALERT_RECIPIENTS=admin@example.com

# Performance Settings
USE_GPU=true
GPU_MEMORY_FRACTION=0.8
NUM_WORKERS=4
BATCH_SIZE=4

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Third-party Services
WEATHER_API_KEY=
MAPS_API_KEY=